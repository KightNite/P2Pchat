<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="TOP_LEFT" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.com.kightnite.gui.HelloController">

  <VBox alignment="TOP_LEFT" prefWidth="300.0" spacing="20.0" styleClass="vbox1" VBox.vgrow="ALWAYS">
      <HBox alignment="CENTER_LEFT">
         <children>
      
          <Button onAction="#onRerfreshButton" text="Refresh" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
          </Button>
            <Label fx:id="welcomeText" text="Welcome" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Label>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>

    <ScrollPane fx:id="scrollPane" VBox.vgrow="ALWAYS">
         <content>
            <GridPane fx:id="gridConnections">
            </GridPane>
         </content>
    </ScrollPane>
      <HBox.margin>
         <Insets bottom="10.0" left="10.0" right="5.0" top="10.0" />
      </HBox.margin>
      <padding>
         <Insets right="5.0" />
      </padding>
  </VBox>

  <VBox alignment="TOP_LEFT" prefHeight="400" HBox.hgrow="ALWAYS">
    <Label text="CHAT" />
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="ALL_TABS" VBox.vgrow="ALWAYS">
        <tabs>
          <Tab text="Untitled Tab 1" />
          <Tab text="Untitled Tab 2" />
        </tabs>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </TabPane>
    <HBox alignment="BOTTOM_LEFT">
      <TextArea HBox.hgrow="ALWAYS" />
         <padding>
            <Insets top="20.0" />
         </padding>
    </HBox>
      <HBox.margin>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </HBox.margin>
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
  </VBox>
</HBox>
